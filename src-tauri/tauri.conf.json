{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Envloom",
  "version": "0.2.0",
  "identifier": "dev.lepepe.envloom",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://127.0.0.1:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Envloom v0.2.0",
        "center": true,
        "width": 1200,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 825,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
